{
  "name": "personal-finances",
  "version": "0.1.1",
  "description": "google app script for personal finances",
  "homepage": "https://github.com/tarberd/personal-finances",
  "main": "build/index.js",
  "license": "MIT",
  "keywords": [
    "gas",
    "google-apps-script",
    "clasp"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint --fix src/**/*.ts",
    "test": "jest --passWithNoTests",
    "bundle": "rollup --no-treeshake -c rollup.config.mjs",
    "build": "npm run lint && npm run test && npm run clean && npm run bundle && cpx src/appsscript.json dist",
    "push": "npm run build && clasp push"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "date-fns": "^3.3.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/date-fns": "^2.6.0",
    "@types/google-apps-script": "^1.0.77",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cpx": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.3.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-license": "^3.2.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.0-beta"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(src/.+(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
